<div class="col-md-12">
	{{#if message}}
		<div class="alert alert-{{ message_type}} alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			{{message}}
		</div>
	{{/if}}
	<form method="post" id="edit_form" action="/save_kb">
	<input type="hidden" name="frm_kb_id" value="{{result._id}}" />
	<div class="row">
		<div class="col-md-8">
			  <div class="form-group">
			    <label for="frm_kb_title">Article title</label>
			    <input type="text" minlength="5" maxlength="100" class="form-control" name="frm_kb_title" id="frm_kb_title" value="{{result.kb_title}}" required>
			  	<p class="help-block val-error"></p>
			  </div>
			  <div class="form-group">
			    <label for="frm_kb_body">Article body</label>
			    <textarea minlength="5" class="form-control" name="frm_kb_body" id="frm_kb_body" rows="12" required>{{{result.kb_body}}}</textarea>
				<p class="help-block val-error"></p>
			  </div>
		</div>
		<div class="row col-md-4">
			<div class="col-lg-6 col-xs-6">
				<div class="form-group">
					<label for="frm_kb_published">Article status: </label></br>
					<input id="frm_kb_published" name="frm_kb_published" type="checkbox" data-size="medium" data-on-color="success" data-off-color="danger" {{checked_state result.kb_published}}/>
				</div>
			</div>
			<div class="col-lg-6 col-xs-6 text-right">
				<div class="form-group">
					<label for="del_post">Delete article: </label></br>
					<a href="/delete/{{result._id}}" id="del_post" onclick="return confirm('Are you sure you want to delete this article?');" class="btn btn-danger">Delete</a>
				</div>
			</div>
			<div class="col-lg-12">
				<div class="form-group">
			    	<label for="frm_kb_keywords">Article keywords</label>
					<input type="text" minlength="3" class="form-control" name="frm_kb_keywords" id="frm_kb_keywords" value="{{result.kb_keywords}}" required>
				</div>
			</div>
			<div class="col-lg-12">		
			  	<a href="/kb/{{result._id}}" class="btn btn-info">Preview</a>
			  	<button type="submit" class="btn btn-primary pull-right">Save</button>
			</div>
		</div>
	</div>
	</form>
</div>